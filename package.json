{
  "name": "pouchdb-full-sync",
  "version": "1.0.2",
  "description": "PouchDB Full Sync - completely replicate databases, preserving all history",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/nolanlawson/pouchdb-full-sync.git"
  },
  "keywords": [
    "pouch",
    "pouchdb",
    "full",
    "sync",
    "couch",
    "couchdb"
  ],
  "author": "Nolan Lawson <nolan.lawson@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/nolanlawson/pouchdb-full-sync/issues"
  },
  "scripts": {
    "prepublish": "npm run build",
    "test-node": "istanbul test ./node_modules/mocha/bin/_mocha test/test.js",
    "test-browser": "./bin/test-browser.js",
    "jshint": "jshint -c .jshintrc lib test/test.js",
    "test": "npm run jshint && ./bin/run-test.sh",
    "build": "mkdirp dist && mkdirp lib && run-scripts browserify min",
    "browserify": "browserify . -g es3ify | derequire > dist/pouchdb.full-sync.js",
    "min": "uglifyjs dist/pouchdb.full-sync.js -mc > dist/pouchdb.full-sync.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js",
    "coverage": "npm test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100"
  },
  "dependencies": {
    "inherits": "^2.0.1",
    "js-extend": "^1.0.1",
    "pouchdb-collate": "1.2.0",
    "pouchdb-checkpointer": "5.4.4",
    "pouchdb-errors": "5.4.4",
    "pouchdb-generate-replication-id": "5.4.4",
    "pouchdb-promise": "5.4.4",
    "pouchdb-utils": "5.4.4",
    "spark-md5": "^2.0.2"
  },
  "devDependencies": {
    "bluebird": "^3.4.1",
    "browserify": "^13.0.1",
    "chai": "^3.5.0",
    "derequire": "^2.0.0",
    "es3ify": "^0.2.2",
    "http-server": "~0.9.0",
    "istanbul": "^0.4.4",
    "jshint": "2.8.0",
    "mkdirp": "^0.5.0",
    "mocha": "^2.5.3",
    "phantomjs-prebuilt": "^2.1.7",
    "pouchdb-memory": "^1.0.0",
    "request": "^2.36.0",
    "run-scripts": "^0.4.0",
    "sauce-connect-launcher": "^0.14.0",
    "selenium-standalone": "^5.1.1",
    "uglify-js": "^2.4.13",
    "watchify": "^3.1.0",
    "wd": "^0.4.0"
  },
  "files": [
    "dist",
    "lib"
  ]
}
